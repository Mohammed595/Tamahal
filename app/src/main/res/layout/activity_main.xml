<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linerTop"
        android:layout_margin="10dp"
        android:padding="10dp"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"

            android:gravity="right"
            android:text="TAMAHAL"
            android:textColor="#3F51B5"
            android:textSize="30dp"
            android:textStyle="bold"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linerTop"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="20dp"
            android:background="@drawable/shape_cardview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_warning_amber_24" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/titleNotfy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="here title notfy"
                        android:textColor="#FF0909"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/discriptionNotfy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:hint="here description notfy"
                        android:textColor="#AE5858"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/othertv"

            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:text="other"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMake"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#682F2F"
                app:cardCornerRadius="20dp"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp"
                android:layout_margin="5dp">





                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chat"
                    android:id="@+id/imgChat"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make complaint"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>

            </androidx.cardview.widget.CardView>


<!--            to-->

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:id="@+id/cardAsked"
                android:layout_height="120dp"
                android:background="#682F2F"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_margin="5dp">





                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_it"
                        android:id="@+id/imgM"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asked help"
                        android:layout_gravity="center"

                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


<!--           -->
        </LinearLayout>


    </LinearLayout>

























